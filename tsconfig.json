{
    "compilerOptions": {
      "target": "es2020",
      "strict": true,
      "outDir": "dist",
      "preserveConstEnums": true,
      "sourceMap": false,
      "module":"commonjs",
      "moduleResolution":"node",
      "esModuleInterop": true, 
      "resolveJsonModule":true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true, 
      "isolatedModules": true, 
      "typeRoots": ["node_modules/@types"],
      "types": [ "jest","node"]
    },
    "exclude": ["node_modules", "**/*.test.ts"]
  }